" Line
set nu
set relativenumber
set nowrap

" Indentation
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

" Search
set nohlsearch
set incsearch

" History
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

" Misc
set hidden
set termguicolors
set scrolloff=4
set signcolumn=yes
set colorcolumn=80

